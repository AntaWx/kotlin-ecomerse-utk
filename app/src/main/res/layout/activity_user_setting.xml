<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserSettingActivity">

    <TextView
        android:id="@+id/akun_saya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Akun saya"
        android:layout_marginBottom="5dp"
        android:background="@drawable/persegi_shape"
        android:backgroundTint="#E3E8E9"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/logout_button"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsbold"
            android:text="Log Out"
            android:textSize="20dp" />

        <Button
            android:id="@+id/keamanan_button"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsbold"
            android:text="Keamanan"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/informasi_id"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsbold"
            android:text="Informasi"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ganti_akun"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_shape"
            android:fontFamily="@font/poppinsbold"
            android:text="Alamat"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Pengaturan"
        android:layout_marginBottom="5dp"
        android:background="@drawable/persegi_shape"
        android:backgroundTint="#E3E8E9"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/poppinsbold"
                android:text="chat"
                android:textSize="20dp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/poppinsbold"
                android:text="notifikasi"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/poppinsbold"
                android:text="privasi"
                android:textSize="20dp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:background="@drawable/button_shape"
                android:fontFamily="@font/poppinsbold"
                android:text="rekening"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>